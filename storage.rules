rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 상품 이미지 규칙
    match /products/{allPaths=**} {
      // 모든 사용자가 이미지를 볼 수 있음
      allow read: if true;
      
      // 로그인한 사용자만 이미지를 업로드할 수 있음
      // 파일 크기 제한 (5MB), 이미지 타입만 허용
      allow write: if request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.contentType in ['image/jpeg', 'image/png', 'image/webp', 'image/gif'];
    }
    
    // 사용자 프로필 이미지 규칙
    match /profiles/{userId}/{allPaths=**} {
      // 모든 사용자가 프로필 이미지를 볼 수 있음
      allow read: if true;
      
      // 사용자는 자신의 프로필 이미지만 업로드할 수 있음
      // 파일 크기 제한 (2MB), 이미지 타입만 허용
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 2 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.contentType in ['image/jpeg', 'image/png', 'image/webp'];
    }
    
    // 기타 파일 규칙
    match /{allPaths=**} {
      // 기본적으로 모든 접근 차단
      allow read, write: if false;
    }
  }
} 